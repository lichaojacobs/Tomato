<div class="container" style="background-color:#fff">

    <div style="display:block;position:relative;left:50px;top:70px;height:800px; ">
        <div style="width:500px;height:589px;background:url(../../Content/Images/photoframe1.png),no-repeat; ">
            <img src="@Model.MallGood.GoodPhoto" class="img-thumbnail" style="width:254px;height:381px;display:block;position:absolute;left:120px;top:60px;" />
        </div>
        
        <div style="display:block;position:absolute;left:600px;top:30px; ">
            <div>
                <h2>
                    <font style="font-weight:bolder">
                        《 @Html.DisplayFor(m => m.MallGood.GoodName)》

                    </font>
                </h2>
            </div>
            <br />
            <div class="form-group">
                <h4>商品数量:&nbsp;</h4>
                <input class="form-control" type="text" value="@Model.MallGood.GoodNumber" disabled />
                
            </div>
            <div class="form-group">
                <h4>商品价格（元）:&nbsp;</h4>
                <input class="form-control" type="text" value="@Model.MallGood.GoodPrice" disabled />
            </div>
            <div class="form-group">
                <h4>商品介绍:&nbsp;</h4>
                    <br />
                <textarea class="form-control"  style="height:80px;width:250px; text-align:left;"  disabled >
                       @Model.MallGood.GoodIntroduction
                </textarea>
                    
                
            </div>
            <div  >
                <button class="btn btn-lg btn-info" onclick="window.location='/MarketDownstairs/MarketIndex'">返回店铺首页</button>
            </div>
            
            
            
        </div>
        <div  style="display:block;position:absolute;right:50px; top:0px; border-style:dashed;">
           <table style="border:1px;">
               <tr>
                   <td><h4>商店名：</h4></td>
                   <td><h4>@Model.MallInfo.Name</h4></td>
               </tr>
               <tr>
                   <td><h4>联系电话：</h4></td>
                   <td><h4>@Model.MallInfo.Contaction</h4></td>
               </tr>
               <tr>
                   <td><h4>微信号：</h4></td>
                   <td><h4>@Model.MallInfo.WeChat</h4></td>
               </tr>
               <tr>
                   <td><h4>QQ:</h4></td>
                   <td>
                       <h4>
                           @Model.MallInfo.QQ
                       </h4>
                   </td>
               </tr>
           </table>
        </div>
        
    </div>
   
</div>






