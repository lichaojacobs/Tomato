@{
    Layout = null;
}
@model ViewModel.LoginTotalModel
<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1"> <!--为移动设备进行优化-->
    <title>登陆</title>
    <!-- Bootstrap -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/scojs.css" rel="stylesheet" />
    <link href="~/Content/css/flat-ui.css" rel="stylesheet" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="http://cdn.bootcss.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="http://cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>

    <div class="container" style="width:970px;">
        <div class="login">
            <div class="login-screen">
                <div class="login-icon">
                    <img src="~/Content/Images/login/icon.png" alt="Welcome to Mail App" />
                    <h4>Welcome to <small>Tju Tomato</small></h4>
                </div>

                <div class="login-form">

                    <ul class="nav nav-tabs" data-trigger="tab" data-easing="slide">
                        <li><a href="#">登陆</a></li>
                        <li><a href="#">注册</a></li>
                    </ul>


                    <div class="pane-wrapper">
                        <!-- 登陆部分-->

                        <div>
                            <br>
                            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                            {
                                <div class="form-group">
                                    @*<input id="inputEmail3" type="email" class="form-control login-field" value="" placeholder="输入你的登陆邮箱" />*@
                                    @Html.TextBoxFor(m => m.loginmodel.UserName, new { type = "email", Class = "form-control login-field", id = "exampleInputEmail1", placeholder = "输入你的登陆邮箱" })
                                </div>

                                <div class="form-group">
                                    @*<input type="password" class="form-control login-field" value="" placeholder="密码" id="login-pass" />*@
                                    @Html.TextBoxFor(m => m.loginmodel.Password, new { type = "password", Class = "form-control login-field", id = "login-pass", placeholder = "密码" })
                                </div>
                              

                                <button type="submit" class="btn btn-primary btn-lg btn-block">登陆</button>
                            }
                            <a class="login-link" href="/Account/GetPasswordBack">忘记密码？</a>

                        </div>



                        <!-- 注册部分-->

                        <div>
                            <br>
                            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                            {
                            <div class="form-group">
                                @*<input id="exampleInputEmail1" type="email" class="form-control login-field" value="" placeholder="输入你的注册邮箱"  />*@
                                @Html.TextBoxFor(m => m.registermodel.email, new { type = "email", Class = "form-control login-field", id = "exampleInputEmail1", placeholder = "输入你的注册邮箱" })
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(m => m.registermodel.password, new { type = "password", Class = "form-control login-field", id = "login-pass", placeholder = "密码(长度不小于6)" })
                            </div>

                            <button type="submit" class="btn btn-primary btn-lg btn-block">注册</button>
                            }
                        </div>


                    </div>

                </div>
            </div>
        </div>


    </div>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="http://cdn.bootcss.com/jquery/1.11.1/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="http://cdn.bootcss.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="~/Content/js/sco.tab.js"></script>
    <script src="~/Content/js/sco.panes.js"></script>
</body>
</html>