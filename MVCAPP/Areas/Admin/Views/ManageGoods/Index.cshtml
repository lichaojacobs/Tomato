
@{
    ViewBag.Title = "ManageGoods";
}
@model ViewModel.GoodsListModel
<div>
    <table id="dg" style="width:auto; align-content:center " align="center">
        <tr>
            <th width="100px">所属商店</th>
            <th width="100px">商品名称</th>
            <th width="100px">商品照片</th>
            <th width="100px">商品简介</th>
            <th width="100px">商品数量</th>
            <th width="100px">商品价格（元）</th>
            <th width="100px"></th>
            <th width="100px"></th>
           
        </tr>
        @foreach (var i in Model.goodsList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => i.ShopID)
                </td>
                <td>
                    @Html.DisplayFor(m => i.GoodName)
                </td>
                <td>
                    <img src="@i.GoodPhoto" style="width:50px;height:50px" />

                </td>
                <td>
                    @Html.DisplayFor(m => i.GoodIntroduction)
                </td>
                <td>
                    @Html.DisplayFor(m => i.GoodNumber)

                </td>
                <td>
                    @Html.DisplayFor(m => i.GoodPrice)

                </td>

                <td>
                    <a href="/Admin/ManageGoods/GetDetail?id=@i.GoodID">详细</a>

                </td>
                <td>

                    <a href="/Admin/ManageGoods/DeleteGoods?id=@i.GoodID">删除该商品</a>

                </td>
               
            </tr>
        }
    </table>
</div>
<div class="pager">

    @Html.pagelinks(Model.pageInfo, X => Url.Action("Index", new { page = X }))

</div>


